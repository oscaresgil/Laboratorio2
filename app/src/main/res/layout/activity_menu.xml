<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ActivityMenu">

    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="33dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_home" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:id="@+id/menu_list"
            android:entries="@array/menuList" style="@style/Widget.AppCompat.ListView"/>
    <Button
            android:text="@string/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_home"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/menu_list" android:layout_marginBottom="135dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="buttonHome"/>
</android.support.constraint.ConstraintLayout>